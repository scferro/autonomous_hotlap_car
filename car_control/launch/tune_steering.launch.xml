<launch>

    <!-- Arguments -->
    <arg name="simulate" default="true"/>
    <arg name="P" default="50."/>
    <arg name="I" default="5."/>
    <arg name="D" default="0.1"/>

    <!-- Launch simulate nodes if simulate==true -->
    <include file="$(find-pkg-share car_control)/launch/drive_car.launch.xml">
        <arg name="simulate" value="$(var simulate)" />
        <arg name="on_robot" value="false" />
        <arg name="use_controller" value="false" />
    </include>

    <!-- Launch steering_control node -->
    <node pkg="car_control" exec="steering_control" >
        <param name="P" value="$(var P)"/>
        <param name="I" value="$(var I)"/>
        <param name="D" value="$(var D)"/>
    </node>

    <!-- Launch steering_test node -->
    <node pkg="car_control" exec="steering_test" >
    </node>

</launch>